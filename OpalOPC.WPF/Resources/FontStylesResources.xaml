<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:System;assembly=mscorlib" >
    

    <core:Double x:Key="TinyFontSize">7</core:Double>
    <core:Double x:Key="VerySmallFontSize">10</core:Double>
    <core:Double x:Key="SmallFontSize">14</core:Double>
    <core:Double x:Key="MediumFontSize">16</core:Double>
    <core:Double x:Key="LargeFontSize">18</core:Double>

    <Style x:Key="LargeHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>

</ResourceDictionary>