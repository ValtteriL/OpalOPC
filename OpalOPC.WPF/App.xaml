<Application
    x:Class="OpalOPCWPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpalOPCWPF"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  merge all ResourceDictionary and make them available globally  -->
                <ResourceDictionary Source="Resources/ColorResources.xaml" />
                <ResourceDictionary Source="Resources/FontStylesResources.xaml" />
                <ResourceDictionary Source="Resources/IconResources.xaml" />
                <ResourceDictionary Source="Resources/NavMenuResources.xaml" />
                <ResourceDictionary Source="Resources/AppResources.xaml" />

                <ResourceDictionary Source="pack://application:,,,/CustomControls/CustomTextBoxStyle.xaml" />
                <ResourceDictionary Source="pack://application:,,,/CustomControls/ToggleTimeButtonStyle.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
