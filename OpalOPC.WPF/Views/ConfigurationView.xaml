                                                                </MultiDataTrigger>
                                                                <Trigger Property="HasItems" Value="False">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate>
                                                                                <TextBlock>No certificates specified.</TextBlock>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </ListBox.Style>
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Height="38">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition />
                                                                    <ColumnDefinition />
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock
                                                                    Grid.Column="0"
                                                                    Margin="5,0,0,0"
                                                                    HorizontalAlignment="Left"
                                                                    VerticalAlignment="Center"
                                                                    FontSize="{StaticResource MediumFontSize}"
                                                                    Foreground="{StaticResource Dark_Grey_Brush}"
                                                                    Text="{Binding .}" />
                                                                <Button
