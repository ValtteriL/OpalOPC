                                                <Rectangle
                                                    Height="2"
                                                    Margin="0,10,0,0"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Top"
                                                    Stroke="{StaticResource Dark_Grey_Brush}"
                                                    StrokeThickness="1" />
                                            </StackPanel>
                                            <Grid
                                                x:Name="UsersKeysListBoxGrid"
                                                Grid.Row="1"
